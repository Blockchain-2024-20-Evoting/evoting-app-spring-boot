# IMAGEN MODELO
FROM eclipse-temurin:21.0.5_11-jdk

# PUERTO DE EJECUCIÓN DEL CONTENEDOR -> INFORMATIVO
EXPOSE 8080

LABEL author=crymuzz

# DEFINIR DIRECTORIO RAIZ DE CONTENEDOR
WORKDIR /root

# COPIAR Y PEGAR ARCHIVOS DENTRO DEL CONTENEDOR
COPY ./pom.xml /root
COPY ./.mvn /root/.mvn
COPY ./mvnw /root

# DESCARGAR LAS DEPENDENCIAS
RUN ./mvnw dependency:go-offline

# COPIAR EL CÓDIGO FUENTE DENTRO DEL CONTENEDOR
COPY ./src /root/src

# CONSTRUIR APLICACIÓN
RUN ./mvnw clean install -DskipTests

# CONSTRUIR APLICACIÓN CUANDO EL CONTENEDOR INICIE
ENTRYPOINT ["java", "-jar", "/root/target/evoting-api-spring-0.0.1-SNAPSHOT.jar"]



